<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', { title : 'Home' })%>

  <body class="home">
    <%- include('partials/header')%>
      <main class="container">
        <div class="row mt-5">
          <div class="col-12 col-md-12 mx-auto">
            <div class="card">
              <div class="card-header">
                <h4 class="car-title">Productos</h4>
              </div>
              <div class="card-body">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                  <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane"
                      type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Productos</button>
                  </li>
                  <li class="nav-item" role="presentation">
                    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane"
                      type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Marcas</button>
                  </li>
                  <li class="nav-item" role="presentation">
                    <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-tab-pane"
                      type="button" role="tab" aria-controls="contact-tab-pane"
                      aria-selected="false">Tutoriales</button>
                  </li>
                  <li class="nav-item" role="presentation">
                    <button class="nav-link" id="disabled-tab" data-bs-toggle="tab" data-bs-target="#disabled-tab-pane"
                      type="button" role="tab" aria-controls="disabled-tab-pane" aria-selected="false"
                      disabled>Disabled</button>
                  </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                  <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab"
                    tabindex="0">

                    <div class="d-flex flex-column gap-2 flex-md-row justify-content-between my-3">
                      <!-- todas las a toma la petecion que va por GET -->
                      <a href="/products/add" class="btn btn-dark"><i class="fa-solid fa-plus"></i>Agregar</a>
                      <!-- importante poner el method, por defecto trae el get -->
                      <!-- boots: primero es mobile, dsp tablet -->
                      <form action="/products/search" class="d-flex flex-column flex-md-row gap-2" method="GET">

                        <select class="form-select" aria-label="Default select example">
                          <option selected hidden>Filtrar por marca</option>
                          <option value="1">One</option>
                          <option value="2">Two</option>
                          <option value="3">Three</option>
                        </select>

                        <input type="text" class="form-control" placeholder="Buscar..." name="keyword">
                        <button type="submit" class="btn btn-dark">
                          <i class="fas fa-search"></i>
                        </button>
                      </form>

                    </div>

                    <div class="table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Marca</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Descuento</th>
                            <th scope="col">P. Final</th>
                            <th scope="col">Acciones</th>
                          </tr>
                        </thead>
                        <tbody>
                          <!-- aplicamos el destructuring en ves de "product". Y agregamos los que faltan-->
                          <% products.forEach(({id, name, brand, price, discount, image, description}, index)=> { %>
                            <!-- index es la posicion del elemento del array y + 1 para que no empiece en 0 -->
                            <tr>
                              <!-- ahora no hace falta poner "product.id" ya que esta destructurado antes -->
                              <th scope="row">
                                <%= index + 1 %>
                              </th>
                              <td>
                                <%= name %>
                              </td>
                              <td>
                                <%= brand ? brand : "sin especificar" %>
                              </td>
                              <td>
                                <%= price %>
                              </td>
                              <td>
                                <%= discount %>
                              </td>
                              <td>
                                <%= price - (discount * price / 100) %>
                              </td>
                              <td>
                                <div class="d-flex gap-2">
                                  <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal"
                                    data-bs-target="#modalDetail<%= id %>">
                                    <i class="fas fa-eye"></i>
                                  </button>

                                  <!-- el modal cuando se itera se carga una sola vez, entonces se cambia el "#modalDetail<%= id %>"-->
                                  <div class="modal fade" id="modalDetail<%= id %>" tabindex="-1"
                                    aria-labelledby="modalDetailLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                      <div class="modal-content">
                                        <div class="modal-header">
                                          <h1 class="modal-title fs-2" id="modalDetailLabel">
                                            <%= name %>
                                          </h1>
                                          <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                          <div class="row">
                                            <div class="col-12 col-md-4">
                                              <img src="/images/<%= image %>" class="img-fluid" alt="">
                                            </div>
                                            <div class="col-12 col-md-8">
                                              <h2>U$S <%= price %>
                                              </h2>
                                              <p>
                                                <%= description %>
                                              </p>
                                              <button type="button" class="btn btn-dark disabled">Comprar</button>
                                            </div>
                                          </div>
                                        </div>

                                      </div>
                                    </div>
                                  </div>
                                  <a href="/products/edit/<%= id %>" class="btn btn-sm btn-success">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                  </a>
                                
                                  <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#modalDelete<%= id %>">
                                    <i class="fa-solid fa-trash"></i>
                                  </button>

                                  <div class="modal fade" id="modalDelete<%= id %>" tabindex="-1"
                                    aria-labelledby="modalDeleteLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                      <div class="modal-content">
                                        <div class="modal-header">
                                          <h1 class="modal-title fs-5" id="modalDeleteLabel">Advertencia</h1>
                                          <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                          <p>¿Estás seguro que querés eliminar el producto <b>"<%= name %>"</b> ?</p>
                                        </div>
                                        <div class="modal-footer">
                                          <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Cancelar</button>
                                            <!-- el boton ejecuta la accion del form -->
                                            <form action="/products/remove/<%= id %>?_method=DELETE" method="POST">
                                              <button type="submit" class="btn btn-danger">Eliminalo</button>
                                            </form>
                                          
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </td>
                            </tr>
                            <% }) %>

                        </tbody>
                      </table>
                    </div>

                  </div>
                  <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab"
                    tabindex="0">
                    todas las marcas

                  </div>
                  <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab"
                    tabindex="0">
                    todos los Tutoriales
                  </div>
                  <div class="tab-pane fade" id="disabled-tab-pane" role="tabpanel" aria-labelledby="disabled-tab"
                    tabindex="0">...</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
  </body>

</html>